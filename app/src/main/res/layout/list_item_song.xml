<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/artist_item_padding"
    android:paddingBottom="@dimen/artist_item_padding">
    <ImageView
        android:id="@+id/album_art_image"
        android:paddingRight="@dimen/song_item_image_padding"
        android:layout_width="@dimen/song_item_image_width"
        android:layout_height="@dimen/song_item_image_height"
        android:layout_weight="0"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/song_item_text_margin">
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/song_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/song_album_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_title_text"/>

    </RelativeLayout>

</LinearLayout>