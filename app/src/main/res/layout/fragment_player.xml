<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="4dp">
    <TextView
        android:id="@+id/player_artist_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="4dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/player_album_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="2dp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/player_album_art"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/player_song_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"/>
    <SeekBar
        android:id="@+id/player_seek_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0" >
    </SeekBar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0">
        <TextView
            android:id="@+id/player_seek_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:padding="2dp"
            android:layout_marginLeft="4dp"
            android:gravity="left"/>
        <TextView
            android:id="@+id/player_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="2dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/player_button_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:src="@drawable/ic_skip_previous_black_24dp"/>
        <ImageButton
            android:id="@+id/player_button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:src="@drawable/ic_play_arrow_black_24dp"/>
        <ImageButton
            android:id="@+id/player_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:src="@drawable/ic_skip_next_black_24dp"/>
    </LinearLayout>



</LinearLayout>